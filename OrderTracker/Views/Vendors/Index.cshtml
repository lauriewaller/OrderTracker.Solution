@using OrderTracker.Models;

@{
  Layout = "_Layout";
}

<h1>Order Central</h1>

<h3><a href='/vendors/new'>Create new vendor</a></h3>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 
<ul>
@foreach (Vendor vendor in Model)
{
  <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
}
</ul>

<p><a href="/vendors">Back to Order Central</a></p>